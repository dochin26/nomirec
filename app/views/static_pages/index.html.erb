<div class="min-h-full flex flex-col items-center justify-center py-12 px-4">
  <!-- ヒーローセクション -->
  <div class="max-w-6xl mx-auto text-center space-y-8">
    <!-- メインビジュアル -->
    <div class="relative max-w-3xl mx-auto">
      <%= image_tag 'top_nomi.jpg', class: 'w-full rounded-3xl shadow-2xl' %>
      <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent rounded-3xl pointer-events-none"></div>
    </div>

    <!-- キャッチコピー -->
    <div class="space-y-4">
      <h1 class="text-4xl md:text-6xl font-bold bg-gradient-to-r from-orange-500 via-red-500 to-pink-500 bg-clip-text text-transparent">
        <%= t('top.title') %>
      </h1>
      <p class="text-2xl md:text-3xl font-semibold text-gray-700">
        <%= t('top.subtitle') %>
      </p>
    </div>

    <!-- サービス説明 -->
    <div class="max-w-2xl mx-auto bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg p-8 space-y-4">
      <p class="text-lg text-gray-700 leading-relaxed">
        <%= t('top.description') %>
      </p>
      <div class="flex flex-wrap justify-center gap-3 pt-4">
        <span class="px-4 py-2 bg-orange-100 text-orange-700 rounded-full text-sm font-medium">ヒューガルデン</span>
        <span class="px-4 py-2 bg-red-100 text-red-700 rounded-full text-sm font-medium">ワニの唐揚げ</span>
        <span class="px-4 py-2 bg-pink-100 text-pink-700 rounded-full text-sm font-medium">郷土料理</span>
        <span class="px-4 py-2 bg-purple-100 text-purple-700 rounded-full text-sm font-medium">洋酒・日本酒</span>
      </div>
    </div>

    <!-- 特徴セクション -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pt-8 max-w-5xl mx-auto">
      <div class="bg-white rounded-xl shadow-md p-6 space-y-3 hover:shadow-xl transition-shadow">
        <div class="text-4xl">🍶</div>
        <h3 class="text-xl font-bold text-gray-800"><%= t('top.features.rare_sake.title') %></h3>
        <p class="text-gray-600 text-sm"><%= t('top.features.rare_sake.description') %></p>
      </div>

      <div class="bg-white rounded-xl shadow-md p-6 space-y-3 hover:shadow-xl transition-shadow">
        <div class="text-4xl">🍖</div>
        <h3 class="text-xl font-bold text-gray-800"><%= t('top.features.unique_food.title') %></h3>
        <p class="text-gray-600 text-sm"><%= t('top.features.unique_food.description') %></p>
      </div>

      <div class="bg-white rounded-xl shadow-md p-6 space-y-3 hover:shadow-xl transition-shadow">
        <div class="text-4xl">📍</div>
        <h3 class="text-xl font-bold text-gray-800"><%= t('top.features.favorite.title') %></h3>
        <p class="text-gray-600 text-sm"><%= t('top.features.favorite.description') %></p>
      </div>
    </div>

    <!-- CTAボタン -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-8">
      <% if user_signed_in? %>
        <%= link_to posts_path, class: "w-full sm:w-auto px-8 py-4 bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-1 text-center" do %>
          <span class="text-lg"><%= t('top.explore') %></span>
        <% end %>
        <%= link_to new_post_path, class: "w-full sm:w-auto px-8 py-4 bg-white border-2 border-orange-500 text-orange-500 font-bold rounded-xl shadow-md hover:bg-orange-50 transition-all duration-200 text-center" do %>
          <span class="text-lg"><%= t('top.add_shop') %></span>
        <% end %>
      <% else %>
        <%= link_to new_user_registration_path, class: "w-full sm:w-auto px-8 py-4 bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-1 text-center" do %>
          <span class="text-lg"><%= t('top.start_free') %></span>
        <% end %>
        <%= link_to new_user_session_path, class: "w-full sm:w-auto px-8 py-4 bg-white border-2 border-orange-500 text-orange-500 font-bold rounded-xl shadow-md hover:bg-orange-50 transition-all duration-200 text-center" do %>
          <span class="text-lg"><%= t('common.login') %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
