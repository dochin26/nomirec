<div class="flex items-center justify-center h-full py-8">
  <div class="w-full max-w-md mx-4">
    <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-2xl border border-white/20 p-8 space-y-6">
      <!-- タイトル -->
      <div class="text-center space-y-2">
        <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-pink-600 bg-clip-text text-transparent">
          パスワード変更
        </h1>
        <p class="text-gray-500 text-sm">新しいパスワードを設定してください</p>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <!-- 新しいパスワード -->
        <div class="space-y-2">
          <%= f.label :password, "新しいパスワード", class: "block text-sm font-semibold text-gray-700" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500">(<%= @minimum_password_length %> 文字以上)</p>
          <% end %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "••••••••", class: "pl-10 w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition outline-none" %>
          </div>
        </div>

        <!-- パスワード確認 -->
        <div class="space-y-2">
          <%= f.label :password_confirmation, "パスワード確認", class: "block text-sm font-semibold text-gray-700" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "pl-10 w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition outline-none" %>
          </div>
        </div>

        <!-- 変更ボタン -->
        <div>
          <%= f.submit "パスワードを変更", class: "w-full px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-0.5" %>
        </div>

        <!-- リンク -->
        <!--
        <div class="pt-4 border-t border-gray-200 space-y-3">
          <%#= render "devise/shared/links" %>
        </div>
        -->
      <% end %>
    </div>
  </div>
</div>
