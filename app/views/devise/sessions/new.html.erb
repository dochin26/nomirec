<div class="flex items-center justify-center h-full py-8">
  <div class="w-full max-w-md mx-4">
    <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-2xl border border-white/20 p-8 space-y-6">
      <!-- ロゴ・タイトル -->
      <div class="text-center space-y-2">
        <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-pink-600 bg-clip-text text-transparent">
          ログイン
        </h1>
        <p class="text-gray-500 text-sm">アカウントにログイン</p>
      </div>

      <%= form_with model: @user, url: user_session_path, local: true, class: "space-y-5" do |f| %>
        <!-- メールアドレス -->
        <div class="space-y-2">
          <%= f.label :email, "メールアドレス", class: "block text-sm font-semibold text-gray-700" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@email.com", class: "pl-10 w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition outline-none" %>
          </div>
        </div>

        <!-- パスワード -->
        <div class="space-y-2">
          <%= f.label :password, "パスワード", class: "block text-sm font-semibold text-gray-700" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: "pl-10 w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition outline-none" %>
          </div>
        </div>

        <!-- Remember me -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2" %>
            <%= f.label :remember_me, "ログイン状態を保持する", class: "ml-2 text-sm text-gray-600" %>
          </div>
        <% end %>

        <!-- ログインボタン -->
        <div>
          <%= f.submit "ログイン", class: "w-full px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-0.5" %>
        </div>

        <!-- リンク -->
        <div class="pt-4 border-t border-gray-200 space-y-3">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
