<div id="like_button_<%= shop.id %>">
  <% if user_signed_in? %>
    <% if shop.liked_by?(current_user) %>
      <%= link_to shop_like_path(shop, shop.likes.find_by(user: current_user)), data: { turbo_method: :delete, turbo_stream: true }, class: "group inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-pink-500 to-rose-500 hover:from-pink-600 hover:to-rose-600 text-white rounded-full transition-all duration-300 shadow-md hover:shadow-lg transform hover:scale-105" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 animate-pulse" viewBox="0 0 24 24" fill="currentColor">
          <path d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z" />
        </svg>
        <span class="text-sm font-bold"><%= shop.likes.count %></span>
      <% end %>
    <% else %>
      <%= link_to shop_likes_path(shop), data: { turbo_method: :post, turbo_stream: true }, class: "group inline-flex items-center gap-2 px-4 py-2 bg-white hover:bg-gradient-to-r hover:from-pink-50 hover:to-rose-50 text-gray-600 hover:text-pink-600 rounded-full transition-all duration-300 shadow-md hover:shadow-lg border-2 border-gray-200 hover:border-pink-300 transform hover:scale-105" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:scale-110 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
        <span class="text-sm font-bold"><%= shop.likes.count %></span>
      <% end %>
    <% end %>
  <% else %>
    <div class="inline-flex items-center gap-2 px-4 py-2 bg-gray-50 text-gray-400 rounded-full border-2 border-gray-200 cursor-not-allowed">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
      </svg>
      <span class="text-sm font-bold"><%= shop.likes.count %></span>
    </div>
  <% end %>
</div>
