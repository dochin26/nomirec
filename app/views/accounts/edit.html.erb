<div class="min-h-screen from-orange-50 via-pink-50 to-purple-50 py-8 px-4">
  <div class="max-w-3xl mx-auto">
    <!-- ヘッダー -->
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-800">アカウント設定</h1>
        <%= link_to "マイページに戻る", mypage_path, class: "text-sm text-gray-600 hover:text-orange-600 transition-colors" %>
      </div>
    </div>

    <!-- アカウント設定フォーム -->
    <div class="bg-white rounded-2xl shadow-lg p-6">
      <%= form_with model: @user, url: account_path, method: :patch, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <!-- アバター画像 -->
        <div class="mb-8">
          <label class="block text-sm font-medium text-gray-700 mb-4">プロフィール画像</label>

          <!-- 現在のアバター表示 -->
          <div class="flex items-center gap-6 mb-4">
            <div class="w-24 h-24 rounded-full overflow-hidden bg-gradient-to-br from-orange-400 to-pink-500 flex items-center justify-center text-white text-3xl font-bold">
              <% if @user.avatar.attached? %>
                <%= image_tag image_url_for(@user.avatar, size: :thumbnail), class: "w-full h-full object-cover" %>
              <% else %>
                <%= @user.name.first %>
              <% end %>
            </div>
            <div>
              <p class="text-sm text-gray-600 mb-2">JPEG、PNG、WebP形式（最大5MB）</p>
              <% if @user.avatar.attached? %>
                <p class="text-xs text-gray-500">現在のファイル: <%= @user.avatar.filename %></p>
              <% end %>
            </div>
          </div>

          <!-- 画像アップロード -->
          <div data-controller="image-preview" class="border-2 border-dashed border-gray-300 rounded-lg p-4 transition-colors hover:border-orange-400">
            <!-- プレースホルダー -->
            <div data-image-preview-target="placeholder" class="text-center py-6">
              <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              <p class="mt-2 text-sm text-gray-600">クリックまたはドラッグ&ドロップで画像を選択</p>
              <label for="user_avatar" class="mt-4 inline-block bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-50 transition-colors text-sm font-medium cursor-pointer">
                ファイルを選択
              </label>
            </div>

            <!-- プレビュー画像 -->
            <div class="relative">
              <img data-image-preview-target="preview" class="hidden w-full h-48 object-contain rounded-lg" alt="プレビュー">

              <!-- ファイル情報 -->
              <div class="hidden mt-3 flex items-center justify-between" data-image-preview-target="fileName">
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-gray-700" data-image-preview-target="fileName"></span>
                  <span class="text-xs text-gray-500" data-image-preview-target="fileSize"></span>
                </div>

                <!-- 削除ボタン -->
                <button type="button"
                        data-image-preview-target="removeButton"
                        data-action="click->image-preview#remove"
                        class="hidden text-red-600 hover:text-red-800 text-sm font-medium">
                  削除
                </button>
              </div>
            </div>

            <%= f.file_field :avatar,
                accept: "image/jpeg,image/png,image/webp",
                class: "hidden",
                id: "user_avatar",
                data: {
                  image_preview_target: "input",
                  action: "change->image-preview#preview"
                } %>
          </div>
        </div>

        <!-- ユーザー名 -->
        <div class="mb-6">
          <%= f.label :name, "ユーザー名", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name,
              class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block w-full p-2.5",
              placeholder: "例: 山田太郎",
              maxlength: 20,
              required: true %>
          <p class="text-xs text-gray-500 mt-1">1〜20文字で入力してください</p>
        </div>

        <!-- メールアドレス -->
        <div class="mb-8">
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email,
              class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block w-full p-2.5",
              placeholder: "example@example.com",
              required: true %>
          <% if @user.provider.present? %>
            <p class="text-xs text-orange-600 mt-1">Google認証でログインしています</p>
          <% end %>
        </div>

        <!-- パスワード変更 -->
        <div class="mb-8">
          <label class="block text-sm font-medium text-gray-700 mb-4">パスワード変更</label>

          <% if @user.provider.present? %>
            <div class="bg-orange-50 border border-orange-200 rounded-lg p-4">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-orange-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
                <div>
                  <p class="text-sm font-semibold text-orange-800">Google認証をご利用中</p>
                  <p class="text-xs text-orange-700 mt-1">Google認証でログインしているため、パスワードの変更はできません</p>
                </div>
              </div>
            </div>
          <% else %>
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 space-y-4">
              <p class="text-xs text-gray-600">パスワードを変更する場合は、以下のフィールドを入力してください。変更しない場合は空欄のままにしてください。</p>

              <!-- 現在のパスワード -->
              <div>
                <%= f.label :current_password, "現在のパスワード", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.password_field :current_password,
                    autocomplete: "current-password",
                    class: "bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block w-full p-2.5",
                    placeholder: "現在のパスワードを入力" %>
                <p class="text-xs text-gray-500 mt-1">セキュリティのため、現在のパスワードの入力が必要です</p>
              </div>

              <!-- 新しいパスワード -->
              <div>
                <%= f.label :password, "新しいパスワード", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.password_field :password,
                    autocomplete: "new-password",
                    class: "bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block w-full p-2.5",
                    placeholder: "新しいパスワードを入力" %>
                <p class="text-xs text-gray-500 mt-1">6文字以上で入力してください</p>
              </div>

              <!-- 新しいパスワード(確認) -->
              <div>
                <%= f.label :password_confirmation, "新しいパスワード(確認)", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.password_field :password_confirmation,
                    autocomplete: "new-password",
                    class: "bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block w-full p-2.5",
                    placeholder: "新しいパスワードを再入力" %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- ボタン -->
        <div class="flex gap-4">
          <%= f.submit "保存する",
              class: "flex-1 bg-gradient-to-r from-orange-500 to-pink-500 text-white font-semibold py-3 px-6 rounded-lg hover:from-orange-600 hover:to-pink-600 transition-all duration-200 shadow-md hover:shadow-lg" %>
          <%= link_to "キャンセル", mypage_path,
              class: "flex-1 bg-gray-200 text-gray-700 font-semibold py-3 px-6 rounded-lg hover:bg-gray-300 transition-colors text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
