<div data-controller="toast"
     data-toast-type-value="<%= type %>"
     class="fixed top-20 right-4 z-50 transform transition-all duration-300 translate-x-full"
     data-action="toast:remove->toast#remove">
  <div class="<%= type == 'success' ? 'bg-green-500' : type == 'error' ? 'bg-red-500' : 'bg-blue-500' %> text-white px-6 py-4 rounded-lg shadow-lg flex items-center gap-3 min-w-[300px]">
    <% if type == 'success' %>
      <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
    <% elsif type == 'error' %>
      <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    <% else %>
      <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    <% end %>

    <p class="flex-1 font-medium"><%= message %></p>

    <button type="button"
            data-action="click->toast#close"
            class="text-white hover:text-gray-200 transition-colors">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
</div>
