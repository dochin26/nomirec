<!-- app/views/layouts/_footer.html.erb -->
<footer class="fixed bottom-0 left-0 right-0 bg-[#6DAAFF] text-white border-t border-white/20 z-50" style="padding-bottom: env(safe-area-inset-bottom);">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex justify-around items-center py-3">
      <!-- トップ -->
      <%= link_to root_path, class: "flex flex-col items-center space-y-1 text-white hover:text-pink-200 transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
        </svg>
        <span class="text-xs font-medium">トップ</span>
      <% end %>

      <!-- 探す -->
      <%= link_to posts_path, class: "flex flex-col items-center space-y-1 text-white hover:text-pink-200 transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
        </svg>
        <span class="text-xs font-medium">探す</span>
      <% end %>

      <!-- 登録 -->
      <%= link_to new_post_path, class: "flex flex-col items-center space-y-1 text-white hover:text-pink-200 transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        <span class="text-xs font-medium">登録</span>
      <% end %>

      <!-- マイページ -->
      <%= link_to '#', class: "flex flex-col items-center space-y-1 text-white hover:text-pink-200 transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
        </svg>
        <span class="text-xs font-medium">マイページ</span>
      <% end %>
    </div>
  </div>
</footer>