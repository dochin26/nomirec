<!-- app/views/layouts/_header.html.erb -->
<header class="fixed top-0 left-0 right-0 bg-[#6DAAFF] shadow-md z-50" style="padding-top: env(safe-area-inset-top);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- ロゴ -->
      <div class="flex-shrink-0">
        <%= link_to "NomireQ", root_path, class: "text-xl font-bold text-pink-600" %>
      </div>

      <!-- ログイン・ログアウト -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "flex flex-col items-center text-white hover:text-pink-200" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
            </svg>
            <span class="text-xs">ログアウト</span>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "flex flex-col items-center text-white hover:text-pink-200" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75" />
            </svg>
            <span class="text-xs">ログイン</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</header>