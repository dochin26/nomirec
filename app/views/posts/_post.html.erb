<div id="post-id-<%= post.id %>" class="group">
  <div class="bg-white rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden h-full border border-gray-100 hover:border-orange-200">
    <!-- ÁîªÂÉè„Çª„ÇØ„Ç∑„Éß„É≥ -->
    <% if post.body_image.attached? %>
      <div class="relative overflow-hidden aspect-video bg-gradient-to-br from-orange-50 to-pink-50">
        <%= image_tag image_url_for(post.body_image), class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
      </div>
    <% end %>

    <div class="p-6 space-y-4">
      <!-- „Éò„ÉÉ„ÉÄ„Éº: „Çø„Ç§„Éà„É´„Å®„Ç¢„ÇØ„Ç∑„Éß„É≥„Éú„Çø„É≥ -->
      <div class="flex justify-between items-start gap-3">
        <h3 class="text-xl font-bold text-gray-800 flex-1 group-hover:text-orange-600 transition-colors">
          <% if current_user && current_user == post.user %>
            <%= link_to post.shop.name, edit_post_path(post), class: "hover:underline" %>
          <% else %>
            <%= link_to post.shop.name, post_path(post), class: "hover:underline" %>
          <% end %>
        </h3>

        <% if current_user && current_user == post.user %>
          <div class="flex gap-2">
            <%= link_to edit_post_path(post), id: "button-edit-#{post.id}", class: "p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            <% end %>
            <%= link_to post_path(post), id: "button-delete-#{post.id}", method: :delete,
                data: { confirm: 'Êú¨ÂΩì„Å´ÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü' },
                class: "p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Â∫óËàóÁ¥π‰ªã -->
      <% if post.shop.introduction.present? %>
        <div class="bg-gradient-to-r from-orange-50 to-pink-50 rounded-xl p-4">
          <p class="text-sm text-gray-700 leading-relaxed"><%= post.shop.introduction %></p>
        </div>
      <% end %>

      <!-- ‰ΩèÊâÄ -->
      <% if post.shop.shop_places.present? %>
        <div class="space-y-2">
          <div class="flex items-center gap-2 text-gray-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-xs font-semibold">‰ΩèÊâÄ</span>
          </div>
          <div class="flex flex-wrap gap-2">
            <% post.shop.shop_places.each do |place| %>
              <span class="px-3 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full"><%= place.address %></span>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- „ÅäÈÖí -->
      <% if post.shop.sakes.present? %>
        <div class="space-y-2">
          <div class="flex items-center gap-2 text-gray-600">
            <span class="text-lg">üç∂</span>
            <span class="text-xs font-semibold">„ÅäÈÖí</span>
          </div>
          <div class="flex flex-wrap gap-2">
            <% post.shop.sakes.each do |sake| %>
              <span class="px-3 py-1 bg-purple-100 text-purple-700 text-xs font-medium rounded-full"><%= sake.name %></span>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- ÊñôÁêÜ -->
      <% if post.shop.foods.present? %>
        <div class="space-y-2">
          <div class="flex items-center gap-2 text-gray-600">
            <span class="text-lg">üçñ</span>
            <span class="text-xs font-semibold">ÊñôÁêÜ</span>
          </div>
          <div class="flex flex-wrap gap-2">
            <% post.shop.foods.each do |food| %>
              <span class="px-3 py-1 bg-orange-100 text-orange-700 text-xs font-medium rounded-full"><%= food.name %></span>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- „Ç≥„É°„É≥„Éà -->
      <% if post.comment.present? %>
        <div class="space-y-2">
          <div class="flex items-center gap-2 text-gray-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            <span class="text-xs font-semibold">„Ç≥„É°„É≥„Éà</span>
          </div>
          <p class="text-sm text-gray-700 bg-gray-50 rounded-lg p-3"><%= post.comment %></p>
        </div>
      <% end %>

      <!-- „Éï„ÉÉ„Çø„Éº: „É¶„Éº„Ç∂„Éº„Å®Êó•‰ªò -->
      <div class="pt-4 border-t border-gray-200 flex items-center justify-between text-xs text-gray-500">
        <div class="flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span><%= post.user.name if post.user %></span>
        </div>
        <div class="flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span><%= l post.created_at, format: :short %></span>
        </div>
      </div>

      <!-- „ÅÑ„ÅÑ„Å≠„Éú„Çø„É≥ -->
      <div class="pt-3">
        <%= render 'likes/like_button', shop: post.shop %>
      </div>
    </div>
  </div>
</div>
