<div class="min-h-screen flex flex-col items-center justify-center">
  <div class="max-w-2xl w-full bg-white rounded-xl shadow-lg p-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">編集</h1>
    
    <%= form_with model: @post, class: "edit_board" do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.fields_for :shop do |shop_fields| %>
        <div class="mb-6">
          <div class="mb-4">
            <%= shop_fields.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= shop_fields.text_field :name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
          </div>
          <div class="mb-4">
            <%= shop_fields.label :introduction, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= shop_fields.text_area :introduction, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", rows: "3" %>
          </div>

          <%= shop_fields.fields_for :shop_places do |place_fields| %>
            <div class="mb-3">
              <%= place_fields.label :address, "住所", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= place_fields.text_field :address, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
            </div>
            <label class="block text-sm font-medium text-gray-700 mt-4">Map</label>
            <div id="map" style="height: 400px; width: 100%;" class="mb-4"></div>
          <% end %>

          <h4 class="text-lg font-semibold text-gray-800 mb-3 border-b pb-2">お酒</h4>
          <div class="mb-3">
            <%= shop_fields.label :sake_names_input, "酒名（複数の場合はスペース区切り）", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= shop_fields.text_field :sake_names_input, placeholder: "例: 獺祭 八海山 久保田", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
            <p class="text-xs text-gray-500 mt-1">※複数登録する場合は、全角または半角スペースで区切ってください</p>
          </div>

          <h4 class="text-lg font-semibold text-gray-800 mb-3 mt-6 border-b pb-2">料理</h4>
          <div class="mb-3">
            <%= shop_fields.label :food_names_input, "料理名（複数の場合はスペース区切り）", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= shop_fields.text_field :food_names_input, placeholder: "例: 刺身 焼き鳥 天ぷら", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
            <p class="text-xs text-gray-500 mt-1">※複数登録する場合は、全角または半角スペースで区切ってください</p>
          </div>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.label :body_image, "店舗イメージ", class: "block text-sm font-medium text-gray-700 mb-4" %>

        <!-- 画像プレビューエリア -->
        <div data-controller="image-preview"
             data-image-preview-existing-image-url-value="<%= @post.body_image.attached? ? image_url_for(@post.body_image) : '' %>"
             class="border-2 border-dashed border-gray-300 rounded-lg p-4 transition-colors">

          <!-- プレースホルダー -->
          <div data-image-preview-target="placeholder" class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <p class="mt-2 text-sm text-gray-600">クリックまたはドラッグ&ドロップで画像を選択</p>
            <p class="mt-1 text-xs text-gray-500">PNG、JPG、WebP、GIF（最大10MB）</p>
          </div>

          <!-- プレビュー画像 -->
          <div class="relative">
            <img data-image-preview-target="preview"
                 class="hidden w-full h-64 object-contain rounded-lg bg-gray-50"
                 alt="プレビュー">

            <!-- 削除ボタン -->
            <button type="button"
                    data-image-preview-target="removeButton"
                    data-action="click->image-preview#remove"
                    class="hidden absolute top-2 right-2 bg-red-500 hover:bg-red-600 text-white rounded-full p-2 shadow-lg transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>

            <!-- ファイル情報 -->
            <div class="mt-3 text-sm text-gray-600">
              <p data-image-preview-target="fileName" class="hidden font-medium truncate"></p>
              <p data-image-preview-target="fileSize" class="hidden text-gray-500"></p>
            </div>
          </div>

          <!-- ファイル入力 -->
          <%= f.file_field :body_image,
              direct_upload: true,
              data: {
                image_preview_target: "input",
                action: "change->image-preview#preview"
              },
              class: "mt-4 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 cursor-pointer" %>
        </div>
      </div>

      <div class="flex justify-between pt-4 border-t mt-6">
        <div class="flex gap-2">
          <%= link_to "戻る", post_path(@post), class: "px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg shadow-sm transition" %>
        </div>
        <div>
          <%= link_to "削除", post_path(@post), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg shadow-sm transition border-0" %>
          <%= f.submit "更新する", class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg shadow-sm transition font-medium" %>
      </div>
      </div>
    <% end %>
  </div>
</div>
