<div class="min-h-screen flex flex-col items-center justify-center">
  <div class="max-w-2xl w-full bg-white rounded-xl shadow-lg p-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">投稿を編集</h1>
    
    <%= form_with model: @post, class: "edit_board" do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.fields_for :shop do |shop_fields| %>
        <div class="mb-6">
          <div class="mb-4">
            <%= shop_fields.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= shop_fields.text_field :name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
          </div>
          <div class="mb-4">
            <%= shop_fields.label :introduction, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= shop_fields.text_area :introduction, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", rows: "3" %>
          </div>

          <%= shop_fields.fields_for :shop_places do |place_fields| %>
            <div class="mb-3">
              <%= place_fields.label :address, "住所", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= place_fields.text_field :address, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
            </div>
          <% end %>

          <h4 class="text-lg font-semibold text-gray-800 mb-3 border-b pb-2">お酒</h4>
          <%= shop_fields.fields_for :sakes do |sake_fields| %>
            <div class="mb-3">
              <%= sake_fields.label :name, "お酒の名前", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= sake_fields.text_field :name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
            </div>
          <% end %>

          <h4 class="text-lg font-semibold text-gray-800 mb-3 mt-6 border-b pb-2">料理</h4>
          <%= shop_fields.fields_for :foods do |food_fields| %>
            <div class="mb-3">
              <%= food_fields.label :name, "料理の名前", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= food_fields.text_field :name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
            </div>
          <% end %>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.label :comment, "コメント", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :comment, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 min-h-[100px]" %>
      </div>

      <%= f.label :comment, "店舗イメージ", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <% if @post.body_image.attached? %>
        <%= image_tag image_url_for(@post.body_image), class: "w-64 h-auto" %>
      <% end %>

      <div class="flex justify-between pt-4 border-t">
        <div class="flex gap-2">
          <%= link_to "戻る", posts_path, class: "px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg shadow-sm transition" %>
          <% if current_user && current_user == @post.user %>
            <%= link_to "削除", post_path(@post), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg shadow-sm transition border-0" %>
          <% end %>
        </div>
        <%= f.submit "更新する", class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg shadow-sm transition font-medium" %>
      </div>
    <% end %>
  </div>
</div>
