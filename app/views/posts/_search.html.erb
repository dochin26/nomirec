<div class="w-full max-w-4xl mx-auto mb-8 px-2">
  <%= search_form_for @q, url: posts_path, method: :get, class: "relative" do |f| %>
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden hover:shadow-xl transition-shadow">
      <!-- 検索フィールドとボタン -->
      <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-2 sm:gap-3 p-3 sm:p-4">
        <div class="flex items-center gap-2 sm:gap-3 flex-1">
          <!-- 検索アイコン -->
          <div class="flex-shrink-0 text-orange-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>

          <!-- 検索フィールド -->
          <%= f.search_field :shop_name_or_shop_sakes_name_or_shop_foods_name_cont,
              placeholder: t('posts.search_placeholder'),
              class: "flex-1 text-gray-700 placeholder-gray-400 focus:outline-none text-base sm:text-lg min-w-0" %>
        </div>

        <!-- 検索ボタン -->
        <%= f.submit t('common.search'), class: "w-full sm:w-auto px-4 sm:px-6 py-2 sm:py-2.5 bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white font-semibold rounded-xl shadow-md hover:shadow-lg transition-all duration-200 cursor-pointer text-sm sm:text-base" %>
      </div>

      <!-- 検索のヒント -->
      <div class="px-3 sm:px-4 pb-3 sm:pb-4 flex flex-wrap gap-1.5 sm:gap-2 items-center">
        <span class="text-xs text-gray-500"><%= t('posts.search_example') %></span>
        <span class="px-2 sm:px-3 py-0.5 sm:py-1 bg-orange-50 text-orange-600 text-xs rounded-full whitespace-nowrap">ヒューガルデン</span>
        <span class="px-2 sm:px-3 py-0.5 sm:py-1 bg-red-50 text-red-600 text-xs rounded-full whitespace-nowrap">ワニの唐揚げ</span>
        <span class="px-2 sm:px-3 py-0.5 sm:py-1 bg-pink-50 text-pink-600 text-xs rounded-full whitespace-nowrap">郷土料理</span>
      </div>
    </div>
  <% end %>
</div>
