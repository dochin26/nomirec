<div class="max-w-3xl mx-auto p-6 bg-white rounded-xl shadow-md space-y-6">
  <!-- タイトル -->
  <div class="border-b pb-4">
    <h1 class="text-3xl font-bold text-gray-800"><%#= @posts.shop.name %></h1>
    <p class="text-sm text-gray-500">ID: <%#= @posts.sake.id %></p>
  </div>

  <!-- ボタン -->
  <div class="flex justify-between pt-4 border-t">
    <%= link_to "編集", '#',
      class: "px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg shadow-sm transition" %>

    <%= link_to "削除", '#',
      method: :delete,
      data: { confirm: "本当に削除しますか？" },
      class: "px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg shadow-sm transition" %>

    <%= link_to "戻る", '#',
      class: "px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg shadow-sm transition" %>
  </div>
</div>