<div class="min-h-screen flex flex-col items-center justify-center">
  <div class="max-w-2xl w-full bg-white rounded-xl shadow-lg p-8">
    <!-- Shop Information -->
    <div class="mb-6">
      <div class="mb-3">
        <label class="block text-sm font-medium text-gray-700">Shop Name</label>
        <div class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg p-2.5 w-full">
          <%= @post.shop.name %>
        </div>
      </div>
      <div class="mb-3">
        <label class="block text-sm font-medium text-gray-700">Introduction</label>
        <div class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg p-2.5 w-full min-h-[80px]">
          <%= @post.shop.introduction %>
        </div>
      </div>

      <% @post.shop.shop_places.each do |place| %>
        <div class="mb-3">
          <label class="block text-sm font-medium text-gray-700">Address</label>
          <div class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg p-2.5 w-full">
            <%= place.address %>
          </div>
          <% place.address = @address %>
          <label class="block text-sm font-medium text-gray-700 mt-4">Map</label>
          <div id="map" style="height: 400px; width: 100%;" class="mb-4"></div>
        </div>
      <% end %>

      <!-- Sakes -->
      <div class="mb-4">
        <h4 class="text-lg font-semibold text-gray-800 mb-2 border-b pb-2">お酒</h4>
        <% if @post.shop.sakes.any? %>
          <div class="flex flex-wrap gap-2">
            <% @post.shop.sakes.each do |sake| %>
              <span class="inline-block bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full">
                <%= sake.name %>
              </span>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm">登録されていません</p>
        <% end %>
      </div>

      <!-- Foods -->
      <div class="mb-4">
        <h4 class="text-lg font-semibold text-gray-800 mb-2 border-b pb-2">料理</h4>
        <% if @post.shop.foods.any? %>
          <div class="flex flex-wrap gap-2">
            <% @post.shop.foods.each do |food| %>
              <span class="inline-block bg-green-100 text-green-800 text-sm font-medium px-3 py-1 rounded-full">
                <%= food.name %>
              </span>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm">登録されていません</p>
        <% end %>
      </div>
    </div>

    <!-- Original Post Description -->

    <%= image_tag post_image_url(@post), class: "w-64 h-auto" %>

    <!-- いいねボタンとシェアボタン -->
    <div class="mb-4 flex justify-center items-center gap-3">
      <%= render 'likes/like_button', shop: @post.shop %>
      <%= render 'shared/x_share_button', shop_name: @post.shop.name, share_url: post_url(@post) %>
    </div>

    <!-- Comments Section -->
    <div class="mt-8 pt-6 border-t border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">
        コメント (<%= @post.comments.count %>)
      </h3>

      <!-- Comments List -->
      <div id="comments_list" class="mb-6">
        <% if @post.comments.any? %>
          <%= render @post.comments %>
        <% else %>
          <p class="text-gray-500 text-sm text-center py-8">まだコメントがありません</p>
        <% end %>
      </div>

      <!-- Comment Form -->
      <% if user_signed_in? %>
        <%= render 'comments/form', post: @post, comment: Comment.new %>
      <% else %>
        <div class="text-center py-4 bg-gray-50 rounded-lg">
          <p class="text-gray-600 mb-2">コメントするにはログインが必要です</p>
          <%= link_to "ログイン", new_user_session_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
        </div>
      <% end %>
    </div>

    <!-- Buttons -->
    <div class="flex justify-between pt-4 mt-6">
    <% if current_user && current_user == @post.user %>
    <div>
      <%= link_to "戻る", posts_path,
        class: "px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg shadow-sm transition" %>
    </div>
    <% end %>
    <% if current_user && current_user == @post.user %>
    <div>
      <%= link_to "削除", post_path(@post), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg shadow-sm transition border-0"  %>
      <%= link_to "編集する", edit_post_path(@post), class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-sm transition cursor-pointer" %>
    </div>
    <% end %>
    </div>
  </div>
</div>